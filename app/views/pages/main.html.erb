<div class="pt-[120px]">
  <!-- begin slider -->
  <div data-controller="carousel" class="swiper-container h-[calc(100vh-40px)] min-h-[400px] overflow-hidden" data-carousel-options-value='{"loop": true, "speed": 800, "autoplay": {"delay": 2500, "disableOnInteraction": false}}'>
    <div class="swiper-wrapper">
      <div class="swiper-slide relative flex items-center">
        <div class="max-w-screen-md mx-auto relative z-20 text-center text-white px-4 lg:px-6">
          <div class="space-y-8">
            <h1 class="text-[60px] leading-[72px] text-white">Welcome to Recipe Community</h1>
            <p class="lg:px-16">Proin eget tortor risus. Quisque velit nisi, pretium ut lacinia in, elementum id enim. Vestibulum ac diam sit amet quam vehicula elementum sed sit amet dui.</p>
            <%= link_to "View Recipes", search_path, class: "block text-white bg-primary-500 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg px-4 lg:px-6 py-2 lg:py-2.5 w-fit dark:bg-primary-600 dark:hover:bg-primary-500 focus:outline-none dark:focus:ring-primary-800 mx-auto" %>
          </div>
        </div>
        <div class="absolute top-0 left-0 w-full h-full z-[10] bg-black/60"></div>
        <%= image_tag "main_slider_1", alt: "Trickly recipes", class: "absolute top-0 left-0 w-full h-full object-cover z-0" %> 
      </div>
      <div class="swiper-slide relative flex items-center">
        <div class="max-w-screen-md mx-auto relative z-20 text-center text-white px-4">
          <div class="space-y-8">
            <h1 class="text-[60px] leading-[72px] text-white">Welcome to Recipe Community</h1>
            <p class="lg:px-16">Proin eget tortor risus. Quisque velit nisi, pretium ut lacinia in, elementum id enim. Vestibulum ac diam sit amet quam vehicula elementum sed sit amet dui.</p>
            <%= link_to "View Recipes", search_path, class: "block text-white bg-primary-500 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg px-4 lg:px-6 py-2 lg:py-2.5 w-fit dark:bg-primary-600 dark:hover:bg-primary-500 focus:outline-none dark:focus:ring-primary-800 mx-auto" %>
          </div>
        </div>
        <div class="absolute top-0 left-0 w-full h-full z-[10] bg-black/60"></div>
        <%= image_tag "main_slider_1", alt: "Trickly recipes", class: "absolute top-0 left-0 w-full h-full object-cover z-0" %> 
      </div>
    </div>
  </div>
  <!-- end slider -->

  <!--begin random recipes-->
  <div class="container mx-auto px-4 lg:px-6 pt-20 md:pt-0 md:-mt-20 relative z-[10]">
    <div class="flex justify-center md:justify-start flex-wrap md:flex-nowrap gap-6">
    <% @random_recipes.each_with_index do |recipe, index| %>
      <div class="w-full sm:w-[calc(50%-12px)] md:w-[calc(33.33333%-16px)]">
        <%= link_to recipe_path(recipe), class: "block link-wrapper" do %>
          <div class="w-full pb-[66%] relative overflow-hidden">
            <% if recipe.image.attached? %>
              <%= image_tag recipe.image.variant(:thumb), class: "absolute w-full h-full object-cover transition-all duration-500" %>
            <% else %>
              <div class="absolute w-full h-full bg-gray-50/30 flex items-center justify-center">
                <?xml version="1.0" encoding="UTF-8"?>
                <svg width="60px" height="60px" viewBox="0 0 48 48" id="a" xmlns="http://www.w3.org/2000/svg" ><defs><style>.b{fill:none;stroke:#9C9C9C;stroke-linecap:round;stroke-linejoin:round;}</style></defs><path class="b" d="M29.4995,12.3739c.7719-.0965,1.5437,.4824,1.5437,1.2543h0l2.5085,23.8312c.0965,.7719-.4824,1.5437-1.2543,1.5437l-23.7347,2.5085c-.7719,.0965-1.5437-.4824-1.5437-1.2543h0l-2.5085-23.7347c-.0965-.7719,.4824-1.5437,1.2543-1.5437l23.7347-2.605Z"/><path class="b" d="M12.9045,18.9347c-1.7367,.193-3.0874,1.7367-2.8945,3.5699,.193,1.7367,1.7367,3.0874,3.5699,2.8945,1.7367-.193,3.0874-1.7367,2.8945-3.5699s-1.8332-3.0874-3.5699-2.8945h0Zm8.7799,5.596l-4.6312,5.6925c-.193,.193-.4824,.2894-.6754,.0965h0l-1.0613-.8683c-.193-.193-.5789-.0965-.6754,.0965l-5.0171,6.1749c-.193,.193-.193,.5789,.0965,.6754-.0965,.0965,.0965,.0965,.193,.0965l19.9719-2.1226c.2894,0,.4824-.2894,.4824-.5789,0-.0965-.0965-.193-.0965-.2894l-7.8151-9.0694c-.2894-.0965-.5789-.0965-.7719,.0965h0Z"/><path class="b" d="M16.2814,13.8211l.6754-6.0784c.0965-.7719,.7719-1.3508,1.5437-1.2543l23.7347,2.5085c.7719,.0965,1.3508,.7719,1.2543,1.5437h0l-2.5085,23.7347c0,.6754-.7719,1.2543-1.5437,1.2543l-6.1749-.6754"/><path class="b" d="M32.7799,29.9337l5.3065,.5789c.2894,0,.4824-.193,.5789-.4824,0-.0965,0-.193-.0965-.2894l-5.789-10.5166c-.0965-.193-.4824-.2894-.6754-.193h0l-.3859,.3859"/></svg>
              </div>
            <% end %>          
          </div>
          <div class="px-4 pt-8 pb-4 text-center">
            <div class="flex justify-center gap-4 mb-4">
              <div class="flex justify-start items-center gap-1 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-3 h-3 text-primary-500 -mt-[2px]"><path d="M416 0C400 0 288 32 288 176V288c0 35.3 28.7 64 64 64h32V480c0 17.7 14.3 32 32 32s32-14.3 32-32V352 240 32c0-17.7-14.3-32-32-32zM64 16C64 7.8 57.9 1 49.7 .1S34.2 4.6 32.4 12.5L2.1 148.8C.7 155.1 0 161.5 0 167.9c0 45.9 35.1 83.6 80 87.7V480c0 17.7 14.3 32 32 32s32-14.3 32-32V255.6c44.9-4.1 80-41.8 80-87.7c0-6.4-.7-12.8-2.1-19.1L191.6 12.5c-1.8-8-9.3-13.3-17.4-12.4S160 7.8 160 16V150.2c0 5.4-4.4 9.8-9.8 9.8c-5.1 0-9.3-3.9-9.8-9L127.9 14.6C127.2 6.3 120.3 0 112 0s-15.2 6.3-15.9 14.6L83.7 151c-.5 5.1-4.7 9-9.8 9c-5.4 0-9.8-4.4-9.8-9.8V16zm48.3 152l-.3 0-.3 0 .3-.7 .3 .7z" fill="currentColor"/></svg>
                <span>
                  <%= recipe.portions %> servings
                </span>
              </div>
              <div class="flex justify-start items-center gap-1 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-primary-500 -mt-[2px]">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>

                <span>
                  <%= recipe.cooking_duration %> minutes
                </span>
              </div>
            </div>
            <h5 class="mb-2 hover:text-primary-600 transition-all duration-500"><%= recipe.title %></h5> 
          </div>                  
        <% end %>      
      </div>
    <% end %>
    </div>
  </div>
  <!-- end random recipes -->

  <!-- begin featured recipes -->
  <div class="container mx-auto px-4 lg:px-6 py-20">
    <div class="flex jusitfy-between flex-nowrap gap-8">
      <!--begin left side -->
      <div class="w-8/12">
        <div class="pb-6 mb-6 border-b border-gray-50/50">
          <h3>Featured Recipes</h3>
        </div>        
        <div data-controller="carousel" data-carousel-options-value='{"slidesPerView": 3, "spaceBetween": 24, "navigation": {"nextEl": ".carousel-button-next", "prevEl": ".carousel-button-prev"}}' class="swiper-container relative mb-10">
          <div class="swiper-wrapper">
            <% @recipes.each do |recipe| %>
            <div class="swiper-slide">
              <%= link_to recipe_path(recipe) do %>
              <div class="pb-[66%] relative">
                <%= image_tag recipe.image.variant(:thumb), class: "absolute w-full h-full object-cover transition-all duration-500" %>

                <div class="show-more w-10 h-10 rounded-full border-2 border-white bg-primary-500 text-white shadow-md absolute -bottom-5 right-5 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 transiion-all duration-500">
                    <path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd"></path>
                  </svg>
                </div>

              </div>
              <% end %>
              <div class="text-sm text-primary-500 mt-3">
                <%= recipe.category.title %>
              </div>
              <div>
                <%= link_to recipe_path(recipe) do %>
                  <h6><%= recipe.title %></h6>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
          <div class="carousel-button-next w-10 h-10 flex justify-center items-center -top-[87px] right-0 absolute text-gray-800 rounded-full border border-gray-50/50 hover:bg-primary-500 hover:border-primary-600 hover:text-white transition-all duration-500">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd" />
            </svg>

          </div>
          <div class="carousel-button-prev w-10 h-10 flex justify-center items-center -top-[87px] right-[50px] absolute text-gray-800 rounded-full border border-gray-50/50 hover:bg-primary-500 hover:border-primary-600 hover:text-white transition-all duration-500">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M17 10a.75.75 0 0 1-.75.75H5.612l4.158 3.96a.75.75 0 1 1-1.04 1.08l-5.5-5.25a.75.75 0 0 1 0-1.08l5.5-5.25a.75.75 0 1 1 1.04 1.08L5.612 9.25H16.25A.75.75 0 0 1 17 10Z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-6">
          <div class="col-span-2">
            <%= link_to recipe_path(@first_recipe) do %>
              <div class="w-full h-[225px] relative">
                <div class="absolute w-full h-full top-0 left-0 bg-black/40 z-10"></div>
                <%= image_tag @first_recipe.image.variant(:thumb), class: "absolute w-full h-full object-cover transition-all duration-500 z-0" %>
                  <div class="show-more w-10 h-10 rounded-full border-2 border-white bg-primary-500 text-white shadow-md absolute top-5 right-5 flex items-center justify-center z-30">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 transiion-all duration-500">
                      <path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div class="absolute bottom-0 left-0 z-30 p-4">
                    <div class="text-white text-sm mb-1">
                      <%= @first_recipe.category.title %>
                    </div>
                    <div>
                      <h6 class="text-white"><%= @first_recipe.title %></h6>
                    </div>
                    
                  </div>
              </div>
            <% end %>
          </div>
          <div class="col-span-1">
            <%= link_to recipe_path(@last_recipe) do %>
              <div class="w-full h-[225px] relative">
                <div class="absolute w-full h-full top-0 left-0 bg-black/40 z-10"></div>
                <%= image_tag @last_recipe.image.variant(:thumb), class: "absolute w-full h-full object-cover transition-all duration-500 z-0" %>
                  <div class="show-more w-10 h-10 rounded-full border-2 border-white bg-primary-500 text-white shadow-md absolute top-5 right-5 flex items-center justify-center z-30">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 transiion-all duration-500">
                      <path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div class="absolute bottom-0 left-0 z-30 p-4 max-w-[300px]">
                    <div class="text-white text-sm mb-1">
                      <%= @last_recipe.category.title %>
                    </div>
                    <div>
                      <h6 class="text-white"><%= @last_recipe.title %></h6>
                    </div>
                    
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- end left-side -->

      <!-- begin right-side -->
      <div class="w-4/12 bg-main-sidebar bg-no-repeat bg-center bg-cover relative">
        <div class="absolute top-0 left-0 w-full h-full bg-black/40">
          <div class="w-[calc(100%-32px)] h-[calc(100%-32px)] m-4 border border-white flex flex-col items-center justify-center text-white">
            <div class="text-lg font-bold mb-2">Good Food</div>
            <h4 class="text-white text-3xl leading-[48px] px-4 mx-auto text-center mb-4">Best Quality Food</h4>
            <%= link_to "Shop Now", "#", class: "block text-white bg-primary-500 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg px-4 lg:px-6 py-2 lg:py-2.5 w-fit dark:bg-primary-600 dark:hover:bg-primary-500 focus:outline-none dark:focus:ring-primary-800 mx-auto" %>
          </div>
        </div>
      </div>
      <!-- end right-side -->
    </div>
  </div>
  <!-- end featured recipes -->
</div>